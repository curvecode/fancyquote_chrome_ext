{
  "name": "fancyquote",
  "version": "1.0.0",
  "description": "Save copied text in browser",
  "main": "index.js",
  "scripts": {
    "copy-files": "node copy-files.js",
    "copy-files:dev": "node copy-files.js --mode=development",
    "copy-files:prod": "node copy-files.js --mode=production",
    "dev": "vite build --watch --mode development && npm run copy-files:dev",
    "build": "vite build && npm run copy-files:dev",
    "build:prod": "vite build --mode production && npm run copy-files:prod",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvecode/fancyquote_vite.git"
  },
  "keywords": [
    "fancyquotes"
  ],
  "author": "curvecode",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/curvecode/fancyquote_vite/issues"
  },
  "homepage": "https://github.com/curvecode/fancyquote_vite#readme",
  "devDependencies": {
    "@types/chrome": "^0.1.28",
    "@types/node": "^20.0.0",
    "html-minifier-terser": "^7.2.0",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  }
}
